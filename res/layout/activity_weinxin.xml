<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.example.customapp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <android.support.v4.view.ViewPager
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/layout_no_coner_bg"
        android:orientation="horizontal"
        android:paddingBottom="4dp"
        android:paddingTop="4dp" >

        <com.example.customapp.customviews.ChangeColorButton
            android:id="@+id/one"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:menu_text="消息"
            app:menu_icon="@drawable/ic_menu_save"
            android:gravity="center" />

        <com.example.customapp.customviews.ChangeColorButton
            android:id="@+id/two"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:menu_icon="@drawable/ic_contact"
            app:menu_text="联系人"
            android:gravity="center" />
        
        <com.example.customapp.customviews.ChangeColorButton
            android:id="@+id/three"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:menu_icon="@drawable/ic_menu_preferences"
            app:menu_text="设置"
            android:gravity="center" />
    </LinearLayout>

</LinearLayout>